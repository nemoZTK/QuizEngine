{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "./Logs/QuizEngineLog-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ],
    "Properties": {
      "Application": "QUIZ_ENGINE"
    }
  },
  "Jwt": {
    "Key": "<very_long_secret_key>",
    "Issuer": "QuizEngineBE",
    "Audience": "QuizEngineClient"
  },

  "AllowedHosts": "*",
  "ConnectionStrings": {
    "QuizDb": "Server=<yourServer>;Database=<db>;User Id=<usr>;Password=<pwd>;TrustServerCertificate=True;"
  }
}
